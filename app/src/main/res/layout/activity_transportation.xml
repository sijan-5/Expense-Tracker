<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transportation">

    <TextView
        android:id="@+id/tviewFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_me_here"
        android:textSize="25sp"
        android:layout_marginTop="-200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tviewSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_me_here"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tviewFirst"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tviewThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_am_transportation"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tviewSecond"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>